# Loki MCP Server Environment Configuration Example
# Copy this file to .env and customize for your setup

# Loki connection settings
LOKI_URL=http://loki:3100
# LOKI_USERNAME=your-username
# LOKI_PASSWORD=your-password
# LOKI_BEARER_TOKEN=your-token

# Debug and logging settings
DEBUG=false
LOG_LEVEL=INFO

# Optional advanced settings
# LOKI_TIMEOUT=30
# LOKI_MAX_RETRIES=3
# LOKI_RATE_LIMIT_REQUESTS=100
# LOKI_RATE_LIMIT_PERIOD=60

# Container settings
LOKI_PORT=3100
PROMTAIL_PORT=9080

# Docker Compose overrides
# COMPOSE_PROJECT_NAME=loki-mcp-stack